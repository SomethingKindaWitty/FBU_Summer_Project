<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sea_blue</item>
        <item name="colorPrimaryDark">@color/sea_blue</item>
        <item name="colorAccent">@color/yellow_duck</item>
        <item name="android:colorControlActivated">@color/sea_blue</item>
        <item name="android:colorControlNormal">@color/yellow_duck</item>
        <item name="android:textColorHint">@color/white_80_transparent</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/yellow_duck</item>
        <item name="android:progressTint">@color/sea_blue_light</item>
        <item name="android:colorControlActivated">@color/sea_blue_light</item>
    </style>

</resources>
