<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sea_blue</item>
        <item name="colorPrimaryDark">@color/sea_blue</item>
        <item name="colorAccent">@color/yellow_duck</item>
        <item name="android:colorControlActivated">@color/sea_blue</item>
        <item name="android:colorControlNormal">@color/yellow_duck</item>
        <item name="android:textColorHint">@color/white_80_transparent</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/yellow_duck</item>
        <item name="android:progressTint">@color/sea_blue_light</item>
        <item name="android:colorControlActivated">@color/sea_blue_light</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">12dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OpenSansLight">
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>
