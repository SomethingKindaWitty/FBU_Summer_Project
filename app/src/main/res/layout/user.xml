<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/toppanel"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="81dp"
                app:srcCompat="@android:color/white" />

            <ImageView
                android:id="@+id/middlepanel"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/toppanel"
                app:srcCompat="@color/grey_0" />

            <ImageView
                android:id="@+id/whitecircle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47dp"
                app:srcCompat="@drawable/whitecircle" />

            <ImageView
                android:id="@+id/profImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_above="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-136dp"
                android:background="@drawable/backgroundprofile"
                android:padding="1dp"
                app:srcCompat="@drawable/duckie" />

            <TextView
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="136dp"
                android:text="Username"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/politicalNum"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="167dp"
                android:text="PoliticalNum"
                android:textAlignment="center" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/toppanel"/>

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/radarchart"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/chart"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/radarchart"
                android:max="500"
                android:progress="0"
                android:progressDrawable="@drawable/circular"/>


        </RelativeLayout>
    </ScrollView>
    <!--<com.jjoe64.graphview.GraphView-->
        <!--android:id="@+id/graph"-->
        <!--android:layout_width="340dp"-->
        <!--android:layout_height="130dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true" />-->
</RelativeLayout>