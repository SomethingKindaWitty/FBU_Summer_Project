<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/toppanel"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_alignBottom="@+id/politicalNum"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-32dp"
        app:srcCompat="@android:color/white" />

    <ImageView
        android:id="@+id/whitecircle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/whitecircle" />

    <ImageView
        android:id="@+id/profImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-136dp"
        android:background="@drawable/backgroundprofile"
        android:padding="1dp"
        app:srcCompat="@drawable/duckie" />

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="136dp"
        android:text="Username"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/politicalNum"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:text="PoliticalNum"
        android:textAlignment="center" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toppanel"
        app:cardBackgroundColor="@color/grey_0"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        card_view:cardBackgroundColor="@color/seethroughwhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="405dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/radarchart"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_alignBottom="@id/chart"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <!--<com.jjoe64.graphview.GraphView-->
        <!--android:id="@+id/graph"-->
        <!--android:layout_width="340dp"-->
        <!--android:layout_height="130dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true" />-->
</RelativeLayout>