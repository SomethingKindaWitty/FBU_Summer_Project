<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/toppanel"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@android:color/white" />

            <ImageView
                android:id="@+id/middlepanel"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/toppanel"
                android:layout_margin="10dp"
                app:srcCompat="@color/white" />


            <ImageView
                android:id="@+id/profImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="46dp"
                android:background="@drawable/circle_drop_shadow"
                android:padding="7dp"
                app:srcCompat="@drawable/duckie" />

            <TextView
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profImage"
                android:layout_centerHorizontal="true"
                android:text="Username"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/politicalNum"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/postsUpvotedLabel"
                android:layout_marginBottom="-211dp"
                android:layout_toEndOf="@+id/progressBar"
                android:text="23.8"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_below="@id/progressBar"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp" />

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/radarchart"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_below="@id/chart"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/toppanel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circular" />

            <TextView
                android:id="@+id/postsUpvotedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="55dp"
                android:layout_marginTop="211dp"
                android:text="Upvoted"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/commentsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/postsUpvotedLabel"
                android:layout_centerHorizontal="true"
                android:text="Comments"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/affiliationScoreLabel"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/postsUpvotedLabel"
                android:layout_toEndOf="@+id/progressBar"
                android:text="Pol. Affiliation"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/numUpvoted"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/postsUpvotedLabel"
                android:layout_alignStart="@+id/postsUpvotedLabel"
                android:layout_marginBottom="-211dp"
                android:text="23"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/postsUpvotedLabel"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-211dp"
                android:text="94"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/politicalAffDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="362dp"
                android:text="0 [liberal] to 100 [conservative]"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/affiliationScore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="306dp"
                android:text="23.8"
                android:textSize="36sp" />


        </RelativeLayout>
    </ScrollView>
    <!--<com.jjoe64.graphview.GraphView-->
        <!--android:id="@+id/graph"-->
        <!--android:layout_width="340dp"-->
        <!--android:layout_height="130dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true" />-->
</RelativeLayout>