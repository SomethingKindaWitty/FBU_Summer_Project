<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.CardView
                    android:id="@+id/topcard"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="200dp"
                    app:cardElevation="7dp"
                    app:srcCompat="@android:color/white">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="23dp"
                        android:paddingLeft="33dp"
                        android:paddingRight="18dp">

                        <TextView
                            android:id="@+id/affiliationScoreLabel"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:text="Pol. Affiliation"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/politicalNum"
                            android:layout_width="87dp"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/affiliationScoreLabel"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/opensans"
                            android:text="23.8"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/numUpvoted"
                            android:layout_width="46dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/politicalNum"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/opensans_light"
                            android:text="23"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/postsUpvotedLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Upvoted"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/commentsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/opensans"
                            android:text="Comments"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/numComments"
                            android:layout_width="59dp"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/commentsLabel"
                            android:layout_alignStart="@+id/commentsLabel"
                            android:fontFamily="@font/opensans_light"
                            android:text="94"
                            android:textAlignment="center" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/secondcard"
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/topcard"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/heading_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F4F7F8"
                            android:orientation="vertical"
                            android:padding="18dp">


                            <TextView
                                android:id="@+id/politicalAffLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans_light"
                                android:text="Political Affiliation"
                                android:textAllCaps="false"
                                android:textSize="24sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/grey_0">

                            <TextView
                                android:id="@+id/liberalToConservative"
                                android:layout_width="101dp"
                                android:layout_height="66dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginBottom="31dp"
                                android:layout_marginStart="19dp"
                                android:fontFamily="@font/opensans"
                                android:text="Liberal : 0 Moderate : 50 Conservative : 100"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/affiliationScore2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="105dp"
                                android:layout_marginTop="35dp"
                                android:fontFamily="@font/opensans_light"
                                android:text="23.81"
                                android:textSize="36sp" />

                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="85dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular" />

                            <TextView
                                android:id="@+id/politicalAffDesc"
                                android:layout_width="110dp"
                                android:layout_height="43dp"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans"
                                android:text="Moderately Conservative"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                        </RelativeLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/thirdcard"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/secondcard"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/distribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="441dp"
                    android:fontFamily="@font/opensans_light"
                    android:text="Your News Distribution"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/across"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/distribution"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/opensans"
                    android:text="Across Political Spectrum"
                    android:textSize="12sp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/betachart"
                    android:layout_width="380dp"
                    android:layout_height="380dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp" >

                </com.github.mikephil.charting.charts.LineChart>
            </RelativeLayout>
            </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fourthcard"
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/thirdcard"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/postsliked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/betachart"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="Posts Liked"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <com.github.mikephil.charting.charts.RadarChart
                            android:id="@+id/radarchart"
                            android:layout_width="380dp"
                            android:layout_height="380dp"
                            android:layout_below="@id/betachart"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40dp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <ImageView
                    android:id="@+id/profImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/circle_drop_shadow"
                    android:padding="7dp"
                    app:srcCompat="@drawable/duckie" />

                <ImageView
                    android:id="@+id/middlepanel"
                    android:layout_width="match_parent"
                    android:layout_height="922dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="#F4F7F8" />


                <TextView
                    android:id="@+id/name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profImage"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/opensans_light"
                    android:text="Username"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/camera_circle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/profImage"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="140dp"
                    app:srcCompat="@drawable/backgroundprofile" />

                <ImageButton
                    android:id="@+id/camera"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@+id/profImage"
                    android:layout_alignTop="@+id/camera_circle"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/camera" />


            </RelativeLayout>
        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
